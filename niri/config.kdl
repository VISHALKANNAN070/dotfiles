// --- Input & Output ---
input {
    keyboard {
        repeat-rate 35
        repeat-delay 200
        xkb {
            // layout "us" 
        }
        numlock
    }

    touchpad {
        tap
        natural-scroll
    }

    mouse {}
    trackpoint {}
    focus-follows-mouse max-scroll-amount="0%"
}

// output "eDP-1" {
//      mode "1920x1080@120.030"
//      scale 2
//      position x=1280 y=0
// }

// --- Layout & Look ---
prefer-no-csd

layout {
    gaps 10
    center-focused-column "never"
    
    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 0.5; }

    focus-ring {
        width 2
        active-color "#dedede"
        inactive-color "#505050"
    }

    border {
        off
        width 2
        active-color "#ffc87f"
        inactive-color "#505050"
        urgent-color "#9b0000"
    }

    shadow {}
    struts {}
}

// --- Window Rules (The Logic You Asked For) ---

// 1. General Rule: Everything opens maximized (fullscreen-ish) by default


// 2. Exception: Alacritty opens floating and NOT maximized

// 3. Keep Firefox PiP floating
window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true
}

// 4. Geometry settings
window-rule {
    geometry-corner-radius 0
    clip-to-geometry true
}

// --- Startup ---

spawn-sh-at-startup "mako"
spawn-sh-at-startup "fuzzel --daemonize"
spawn-at-startup "swaybg" "-m" "fill" "-i" "/home/vishal/Downloads/wallhaven-rqqygw.jpg"
spawn-sh-at-startup "~/.local/bin/cliphist-watch &"
spawn-at-startup "~/.local/bin/ghost-watcher.sh"

// --- Environment ---

environment {
    XCURSOR_SIZE "24"
}

screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

animations {
    off
}

// --- Binds ---

binds {
    // Audio & Brightness
    F1 { spawn-sh "~/.local/bin/volume-osd.sh mute"; }
    F2 { spawn-sh "~/.local/bin/volume-osd.sh down"; } 
    F3 { spawn-sh "~/.local/bin/volume-osd.sh up"; }
    F4 { spawn-sh " ~/.local/bin/brightness-osd.sh down"; }
    F5 { spawn-sh " ~/.local/bin/brightness-osd.sh up"; }
    Ctrl+backslash {spawn-sh "~/.local/bin/audioswitch";}

    // Launchers
    Mod+D { spawn "fuzzel"; }
    Mod+Return { spawn "alacritty"; }
    Super+Space { spawn "~/.local/bin/ghost-hud.sh"; }
    Alt+F4 {spawn-sh "~/.local/bin/powermenu";}
    Mod+V { spawn-sh "~/.local/bin/clipmenu"; }
	Mod+C {spawn-sh "~/.local/bin/mpd-controls";}

    // Window Management
    Mod+Q          { close-window; }
    Mod+Shift+E    { quit; }
    Mod+O repeat=false { toggle-overview; }

    // Floating Controls (NEW)
    // Toggle current window between floating and tiled
    Mod+Shift+Space { toggle-window-floating; }
    // Switch focus between the floating layer and tiling layer
    Mod+Tab { switch-focus-between-floating-and-tiling; }

    // Focus
    Mod+Left  { focus-column-left; }
    Mod+Right { focus-column-right; }
    Mod+Down  { focus-window-down; }
    Mod+Up    { focus-window-up; }
    Mod+H     { focus-column-left; }
    Mod+J     { focus-window-down; }
    Mod+K     { focus-window-up; }
    Mod+L     { focus-column-right; }
    
    // Workspaces
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+U { focus-workspace-up; }
    Mod+I { focus-workspace-down; }

    // Moving Windows
    Mod+Ctrl+down { move-column-to-workspace-down; }
    Mod+Ctrl+up   { move-column-to-workspace-up; }
    Mod+Ctrl+H     { move-column-left; }
    Mod+Ctrl+J     { move-window-down; }
    Mod+Ctrl+K     { move-window-up; }
    Mod+Ctrl+L     { move-column-right; }
    
    Mod+Shift+Left  { move-column-left; }
    Mod+Shift+Right { move-column-right; }
    Mod+Shift+Up    { move-window-up; }
    Mod+Shift+Down  { move-window-down; }

    // Move to Workspace
    Mod+Shift+1 { move-column-to-workspace 1; }
    Mod+Shift+2 { move-column-to-workspace 2; }
    Mod+Shift+3 { move-column-to-workspace 3; }
    Mod+Shift+4 { move-column-to-workspace 4; }

    // Sizing
    Mod+Minus { set-window-width "-10%"; }
    Mod+Equal { set-window-width "+10%"; }
    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }    



    // Sizing

	Mod+F          { maximize-column; }
    Mod+Shift+F    { fullscreen-window; }
    Mod+R          { switch-preset-column-width; }
    // Screenshots
    Print { screenshot; }
    
    // Mouse Binds (Crucial for Resizing Floating Windows)
    Mod+WheelScrollDown      cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp        cooldown-ms=150 { focus-workspace-up; }
    Mod+Ctrl+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; }
    Mod+Ctrl+WheelScrollUp   cooldown-ms=150 { move-column-to-workspace-up; }
    
    Mod+W { toggle-column-tabbed-display; }

}
