#!/bin/sh

# Increase by +5%
pactl set-sink-volume @DEFAULT_SINK@ +5%

# Read the current volume percentage (number only)
vol=$(pactl get-sink-volume @DEFAULT_SINK@ | grep -o '[0-9]\+%' | head -1 | tr -d '%')

# Clamp if above 100
if [ "$vol" -gt 100 ]; then
    pactl set-sink-volume @DEFAULT_SINK@ 100%
fi
