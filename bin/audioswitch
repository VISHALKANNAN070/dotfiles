#!/bin/sh

SINK="alsa_output.pci-0000_00_1f.3.analog-stereo"

# Use fuzzel instead of dmenu
choice=$(printf "Speakers\nHeadphones" | fuzzel --dmenu -p "Output:")

case "$choice" in
    "Speakers")
        pactl set-sink-port "$SINK" analog-output-speaker
        notify-send "Audio switched to Speakers"
        ;;
    "Headphones")
        pactl set-sink-port "$SINK" analog-output-headphones
        notify-send "Audio switched to Headphones"
        ;;
    *)
        notify-send "Audio switch cancelled"
        ;;
esac
